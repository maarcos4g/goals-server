generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(cuid())
  name      String
  email     String  @unique
  avatarUrl String?
  authId    String? @unique

  goals Goal[]

  @@map("users")
}

model Goal {
  id    String  @id @default(cuid())
  name  String
  value Decimal @default(0.0)

  user   User   @relation(fields: [userId], references: [id])
  userId String
}
